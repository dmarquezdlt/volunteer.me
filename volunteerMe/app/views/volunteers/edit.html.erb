
<div class="container" style="padding-top: 60px;">
  <h1 class="page-header">Edit Profile</h1>

  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <!-- <img src="https://findinit.files.wordpress.com/2015/03/volunteer_hero.png" class="avatar img-circle img-thumbnail" alt="avatar"> -->
        <%#= image_tag @user.avatar.url %>
        <%= image_tag @volunteer.avatar.url(:medium) %>
        <%#= image_tag @user.avatar.url(:thumb) %>
      </div>

    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">

      <div class="alert alert-info alert-dismissable">
        <a class="panel-close close" data-dismiss="alert">Ã—</a>
        <i class="fa fa-coffee"></i>
        Edit your profile.
      </div>
      <h3>Personal info</h3>


        <%= form_for :volunteer, url: volunteer_path(@volunteer), method: :patch, :html => { :multipart => true } do |f| %>

          <%= f.label :name, class: "col-lg-3 control-label" %>
          <div class="col-lg-9">
          <%= f.text_field :name,  class: "form-control"%><br>
          </div>

          <%= f.label :email, class: "col-lg-3 control-label" %>
          <div class="col-lg-9">
          <%= f.text_field :email, class: "form-control pul"%><br>
          </div>

          <%= f.file_field :avatar %>

          <%= f.submit "Submit", class: "btn btn-large btn-primary pull-right" %>

        <% end %>

        <div>

           <%= link_to 'Back', volunteer_path %> <br>
           <%= link_to 'Delete Profile', volunteer_path(@volunteer), method: :delete, data: {confirm: 'Are you sure you want to Delete your Account'} %>

        </div>


          </div>
        </div>
      </form>
    </div>
  </div>
</div>