<div class="container">
<!-- volunteer sign in -->
  <div id="modal_volunteer_sign_in" class="popupContainer" style="display:none;">
    <header class="popupHeader">
      <span class="header_title">Volunteer Login</span>
      <span class="modal_close"><i class="fa fa-times"></i></span>
    </header>

      <section class="popupBody">
      <div class="user_login">
      <%= form_for(:volunteer, url: volunteer_session_path) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      <a class="forgot_password" href="#">Forgot password?</a>
      </div>
      </section>
  </div>
<!-- organization sign in -->
  <div id="modal_organization_sign_in" class="popupContainer" style="display:none;">
    <header class="popupHeader">
      <span class="header_title">Organization Login</span>
      <span class="modal_close"><i class="fa fa-times"></i></span>
    </header>

      <section class="popupBody">
      <div class="user_login">
      <%= form_for(:organization, url: organization_session_path) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      <a class="forgot_password" href="#">Forgot password?</a>
      </div>
      </section>
  </div>

<!-- volunteer registration -->
<div id="modal_volunteer_registration" class="popupContainer" style="display:none;">
    <header class="popupHeader">
      <span class="header_title">Volunteer Registration</span>
      <span class="modal_close"><i class="fa fa-times"></i></span>
    </header>

      <section class="popupBody">
      <div class="user_login">
      <%= form_for(:volunteer, url: volunteer_registration_path) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      </div>
      </section>
  </div>

  <!-- organization registration -->

  <div id="modal_organization_registration" class="popupContainer" style="display:none;">
      <header class="popupHeader">
        <span class="header_title">Organization Registration</span>
        <span class="modal_close"><i class="fa fa-times"></i></span>
      </header>

        <section class="popupBody">
        <div class="user_login">
        <%= form_for(:organization, url: organization_registration_path) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>

        </div>
        </section>
    </div>
  <div class="search_bar">
      <%= bootstrap_form_for :search, layout: :inline, label_col: "col-sm-2", control_col: "col-sm-10", url: searches_path, method: :post do |f| %>

        <%= f.date_field :date %>

        <%= f.time_field :time_start %>

        <%= f.select(:commitment_type, commitment_array) %>

        <%= f.select(:state, state_array) %>

        <%= f.submit "Search", class: "btn btn-large btn-success"%>
      <% end %>
   </div>




   <div class="near_you"><h2>Upcoming Opportunities</h2></div>

    <% @events.order(:date).limit(3).each do |event| %>
     <div class="table">
        <div class="col-xs-6 col-md-4">
          <div class="thumbnail">
            <img src="http://2xxuz23rft0449gqis2s2t0l.wpengine.netdna-cdn.com/wp-content/uploads/2013/12/gi-icon-hands-blue.png" height="500px" width="250px">
            <div class="caption">
              <div>
              <h3><%= event.name %></h3>

              <h4><%= event.organization.name %></h4>

              <% if event.commitment_type == "pro-bono" || event.commitment_type == "mentorhship" || event.commitment_type == "other" || event.commitment_type == "flexible" %>
              <h5>Ongoing</h5>
              <% else %>
              <h5><%= event.time_start.strftime("%l:%M %P") %> | <%= event.date.strftime("%a, %b %e, %Y ") %></h5>
              <% end %>

            <p><a href=<%= event_path(event) %> class="btn btn-default" role="button">Details</a></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>

</div>